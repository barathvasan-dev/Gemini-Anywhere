<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0000000">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/voiceCard"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="24dp"
        app:cardBackgroundColor="@android:color/white">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Close Button (Top Right) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnCloseCard"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="top|end"
                android:layout_margin="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#F5F5F5">
                
                <ImageButton
                    android:id="@+id/btnClose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:tint="#666666"
                    android:padding="6dp"
                    android:contentDescription="Close" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

            <!-- Mic Button -->
            <FrameLayout
                android:id="@+id/micContainer"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/micButton"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:cardCornerRadius="55dp"
                    app:cardElevation="12dp"
                    app:cardBackgroundColor="@color/primary">

                    <ImageView
                        android:id="@+id/micIcon"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_btn_speak_now"
                        android:tint="@android:color/white" />

                </com.google.android.material.card.MaterialCardView>

            </FrameLayout>

            <!-- Status Text -->
            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:text="Tap to Start Recording"
                android:textColor="#1A1A1A"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- Transcription Editor (hidden initially) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/transcriptionScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F8F9FA"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:padding="12dp">

                    <EditText
                        android:id="@+id/transcriptionText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#1A1A1A"
                        android:textSize="15sp"
                        android:lineSpacingExtra="6dp"
                        android:background="@android:color/transparent"
                        android:hint="Edit your voice input..."
                        android:textColorHint="#9E9E9E"
                        android:inputType="textMultiLine|textCapSentences"
                        android:gravity="top|start"
                        android:minLines="4"
                        android:padding="8dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="true" />

                </ScrollView>

            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons Container (hidden initially) -->
            <LinearLayout
                android:id="@+id/actionButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone">

                <!-- Cancel Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="Cancel"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="#E57373"
                    android:textColor="#D32F2F"
                    app:cornerRadius="10dp" />

                <!-- Record Again Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReplay"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:text="Record Again"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/primary"
                    android:textColor="@color/primary"
                    app:cornerRadius="10dp" />

                <!-- Send Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSend"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="Send"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    app:backgroundTint="#4CAF50"
                    android:textColor="@android:color/white"
                    app:cornerRadius="10dp" />

            </LinearLayout>

        </LinearLayout>

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
